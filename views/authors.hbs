<a href="/authors">
  <section class="box">
    <i class="fa fa-user fa-2x"></i>
    <h2>Authors</h2>
  </section>
</a>
<a href="/books">
  <section class="box">
    <i class="fa fa-bookmark fa-2x"></i>
    <h2>Books</h2>
  </section>
</a>

<section class="flexy">
  <section class='bookPage'>
    <ul>
      {{#each author}}
      <div class="bookCover">
        <a href="/authors/{{this.authorId}}/singlePage"><img src="{{this.portrait_url}}" alt="Portrait" /></a>
        <div class="bookInfo">
          <li>{{this.first_name}} {{this.last_name}}</li>
          <div class="icon">
          <a href="/authors/{{this.authorId}}/editAuthor"><i class="fa fa-pencil fa-2x"></i></a>
          <a href="/authors/{{this.authorId}}/deleteAuthor"><i class="fa fa-times fa-2x"></i></a>
          </div>
            <!-- <div> -->
              <!-- {{#each ../author}}
              <p>By: {{this.first_name}} {{this.last_name}}</p>
              {{/each}} -->
            <!-- </div> -->
          <div class="bookDes">
            <p>{{this.bio}}</p>
          </div>

        </div>
      </div>
      {{/each}}
    </ul>
    <a href="/addAuthor"><div class="addButton">
      <h2>Add an Author</h2>
    </div></a>
  </section>
</section>
